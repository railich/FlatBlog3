<!DOCTYPE html>
<html>
  <head>
    <title>FlatBlog3</title>
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <div id="title">
      <div>
        <h1>FlatBlog<span>&sup3;</span></h1>
        <p>Test job at the rate of training of Ruby on Rails programmers from FlatSoft company</p>
      </div>
      <div>
        <% if user_signed_in? %>
          <!-- for signed user -->
          Hi, <%= current_user.name %> (<%= current_user.email %>) &nbsp;|
          <%= link_to "New Article", new_article_path %>&nbsp;|
          <%= link_to "Edit profile", edit_user_registration_path %>&nbsp;|
          <%= link_to('Logout', destroy_user_session_path, :method => 'delete') %>&nbsp;
        <% else %>
          <!-- for unsigned user -->
          <%= link_to "Login", new_user_session_path %>&nbsp;|
          <%= link_to "Registration", new_user_registration_path %>&nbsp;
        <% end %>
      </div>
      <div>
        <!-- message block -->
        <% unless(notice.to_s + alert.to_s).empty? %>
          <p class="notice"><%= notice %></p>
          <p class="alert"><%= alert %></p>
        <% end %>

      </div>
      <!-- link to ordering by rating -->
      <div>
        <%= order_by_rating %>
      </div>
    </div>
    <div class="clear"></div>

    <div id="content">
      <%= yield %>
    </div>
  </body>
</html>

