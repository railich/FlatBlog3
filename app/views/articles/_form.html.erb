<% form_for @article do |f| %>
  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content %><br/>
    <%= f.text_area :content, :rows => 10, :cols => 40 %>
  </p>
  <p>
    <%= f.label :category %><br/>
    <%= f.select :category, Article::CATEGORY %>
  </p>
   <p>
    <%= f.label :url %><br/>
    <%= f.text_field :url %>
  </p>
   <p>
    <%= f.label :tags %><br/>
    <%= f.text_field :tags %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

